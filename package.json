{
  "name": "just-another-speed-dial",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "acorn": "^5.3.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-react-app": "^3.1.0",
    "babel-runtime": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.8",
    "eslint": "^4.15.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "fs-extra": "^3.0.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^20.0.4",
    "lodash": "^4.17.4",
    "postcss-modules-extract-imports": "^1.2.0",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dev-utils": "^4.2.1",
    "react-dom": "^16.2.0",
    "react-portal": "^4.1.2",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "pack": "web-ext build -s extension -a build --overwrite-dest",
    "test": "node scripts/test.js --env=jsdom"
  },
  "jest": {
    "collectCoverageFrom": [
      "speed-dial-app/src/**/*.{js,jsx}",
      "options-app/src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/scripts/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/speed-dial-app/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/speed-dial-app/src/**/?(*.)(spec|test).{js,jsx}",
      "<rootDir>/options-app/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/options-app/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/scripts/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/scripts/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "devDependencies": {
    "web-ext": "^2.3.1"
  }
}
